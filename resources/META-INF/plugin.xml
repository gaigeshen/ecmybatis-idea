<idea-plugin>
  <id>me.gaigeshen.idea.ecmybatis</id>
  <name>Ecmybatis</name>
  <version>1.0</version>
  <vendor email="gaigeshen@qq.com" url="https://github.com/gaigeshen">gaigeshen</vendor>

  <description><![CDATA[
      A cool tool for generate mybatis files, include dao, mapper and entities files
    ]]></description>

  <change-notes><![CDATA[
      Change notes here, include change notes to display
    ]]>
  </change-notes>

  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <applicationConfigurable instance="me.gaigeshen.idea.ecmybatis.DatabaseOptionConfigurable" />
    <applicationService serviceImplementation="me.gaigeshen.idea.ecmybatis.DatabaseOption" />
  </extensions>

  <actions>
    <action id="ecmybatis.actions.dialog.generate" class="me.gaigeshen.idea.ecmybatis.action.GenerateDialogAction"
            text="GenerateDialogAction" description="Show dialog for generate mybatis files">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>
  </actions>

</idea-plugin>